#include <iostream>
#include <string>
using namespace std;
int main()
{
	int y, x,z=0;
	cout << "Enter a number you want the table of as well as till which number you want it to be printed example 10 etc.: " << endl;
	cin >> y>>x;
	while (cin.fail())
	{
		cout << "Invalid command enter the numbers again: " << endl;
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> y>>x;
	}
	while (y <= 10)
	{
		cout << y << " x " << z << " = " << y * z << endl;
		z++;
	}

}
